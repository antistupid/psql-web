
    <h1 class="page-header">domains</h1>
    {% include "flash.twig" %}
    <div class="row">
        <div class="col-lg-3 col-md-3">
            <form action="" method="post">
                <input type="hidden" name="mode" value="add">

                <div class="form-group">
                    <label for="inputName">
                        <small>Name</small>
                    </label>
                    <input type="text" class="form-control input-sm" name="name" id="inputName"
                           placeholder="domain name">
                </div>
                <button type="submit" class="btn btn-default btn-sm">Create</button>
            </form>
            <hr class="visible-sm-block visible-xs-block">
        </div>
        <div class="col-lg-9 col-md-9">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>name</th>
                    <th>master</th>
                    <th>last check</th>
                    <th>type</th>
                    <th>notified</th>
                    <th>account</th>
                </tr>
                </thead>
                <tbody>
                {% for l in list %}
                <tr>
                    <td><a href="">{{ l.datname }}</a></td>
                </tr>
                {% else %}
                    <tr>
                        <td colspan="10">There is no entry. Try to add a new domain.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
